<div class="materialContainer">
    <div class="registration_box">
        <div class="section_title">Create Your Account</div>
        <form action="/registration" method="post">
            <div class="name_row">
                <div><label for="name">Login</label> </div>
                <input type="text" name="username" id="name">
            </div>

            <div class="pass_row">
                <div><label for="pass">Password</label></div>
                <input type="password" name="password" id="pass">
            </div>

            <div class="pass_row">
                <div><label for="pass2">Confirm password</label></div>
                <input type="password" name="password2" id="pass2">
            </div>

            <div>
                <button class="common_btn"><a class="btn_a">Create Account</a></button>
            </div>
        </form>
    </div>
</div>


{{#each errors}}
    {{this.msg}}
{{/each}}
