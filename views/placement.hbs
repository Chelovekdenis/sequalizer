<div class="materialContainer">
    <div class="placement_box">
        <div class="section_title">Разместите ваш товар или услугу</div>
        <div>
            <!--            <div class="left_column">-->
            <form action="/placement" method="post">
                <div class="grid_box">
                    <div class="name_row">
                        <div><label for="logo">Логотип</label></div>
                        <input type="text" name="logo" id="p_logo">
                    </div>

                    <div class="d_name name_row">
                        <div><label for="name">Название</label></div>
                        <input type="text" name="product_name" id="p_name">
                    </div>

                    <div class="name_row">
                        <div><label for="price">Цена</label></div>
                        <input type="text" name="price" id="p_price">
                    </div>

                    <div class="name_row">
                        <div><label for="address">Адресс</label></div>
                        <input type="text" name="address" id="p_address">
                    </div>

                    <div class="name_row">
                        <div><label for="phone_number">Номер телефона</label></div>
                        <input type="text" name="phone_number" id="p_phone_number">
                    </div>

                    <div class="d_des name_row">
                        <div><label for="description">Описание</label></div>
                        <textarea name="description" id="description" cols="30" rows="10"></textarea>
                    </div>

                    <div class="placement_btn">
                        <div class="indent"></div>
                        <button class=""><a class="knopka">Разместить</a></button>
                        <div class="indent"></div>
                    </div>

                    <div class="preview_image">
                        <img class="order_img2" id="preview_i" src="" alt="">
                    </div>
                </div>
            </form>
        </div>
